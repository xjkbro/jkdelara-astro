---
const { title, image } = Astro.props.frontmatter;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main class="min-h-screen w-full">
			<article class="py-24 w-2/3 mx-auto border-l border-r border-black">
				<a class="my-12 p-4 hover:underline" href="/">‚Üê Go back</a>
				<h1 class="text-5xl p-4">{title}</h1>
				<img
					src={image}
					class="w-full aspect-video"
					alt={`${title} feature image`}
				/>

				<div class="prose !max-w-full rounded-lg p-4 mt-4 mb-12">
					<slot />
				</div>
			</article>
		</main>
		<footer class="border-t border-black">
			<div class="w-2/3 mx-auto h-24 flex justify-between items-center">
				<div>made with <a href="https://astro.build">astro</a></div>
				<div>Jason-Kyle De Lara &copy; {new Date().getFullYear()}</div>
			</div>
		</footer>
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&display=swap");
	* {
		font-family: "JetBrains Mono", monospace;
	}
</style>
